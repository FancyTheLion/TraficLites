<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TrafficLights.ViewModels"
			 xmlns:controls="clr-namespace:TrafficLights.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TrafficLights.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

	<!-- Including styles -->
	<UserControl.Styles>
		<StyleInclude Source="/Styles/Common.axaml" />
	</UserControl.Styles>

	<!-- Main grid -->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- Here traffic lights control resides -->
		<Border
			Grid.Column="0"
			Grid.Row="0"
			Classes="VisibleBorders">

			<!--Traffic lights control -->
			<controls:TrafficLightsControl
				HorizontalAlignment="Center"
				IsRedLightOn="{ Binding IsRedOn }">
				
			</controls:TrafficLightsControl>
			
		</Border>

		<!-- Here buttons reside -->
		<Border
			Grid.Column="0"
			Grid.Row="1"
			Classes="VisibleBorders">

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<Button
					Grid.Column="0"
					Grid.Row="0"
					HorizontalAlignment="Center"
					Command="{ Binding TurnRedOnCommand }">
					Зажечь красный
				</Button>
				
				<Button
					Grid.Column="0"
					Grid.Row="1"
					HorizontalAlignment="Center"
					Command="{ Binding TurnRedOffCommand }">
					Погасить красный
				</Button>

				<Button
					Grid.Column="1"
					Grid.Row="0"
					HorizontalAlignment="Center"
					Command="{ Binding TurnYellowOnCommand }">
					Зажечь желтый
				</Button>

				<Button
					Grid.Column="1"
					Grid.Row="1"
					HorizontalAlignment="Center"
					Command="{ Binding TurnYellowOffCommand }">
					Погасить желтый
				</Button>

				<Button
					Grid.Column="2"
					Grid.Row="0"
					HorizontalAlignment="Center"
					Command="{ Binding TurnGreenOnCommand }">
					Зажечь зеленый
				</Button>

				<Button
					Grid.Column="2"
					Grid.Row="1"
					HorizontalAlignment="Center"
					Command="{ Binding TurnGreenOffCommand }">
					Погасить зеленый
				</Button>
			</Grid>
		</Border>
	</Grid>


</UserControl>
